{
  "name": "digital_va_gov_automation_pipeline",
  "version": "1.0.0",
  "description": "Comprehensive test automation framework for digital.va.gov with CI/CD pipeline",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "playwright test",
    "test:smoke": "playwright test tests/smoke",
    "test:e2e:debug": "playwright test --debug",
    "test:a11y": "playwright test tests/e2e/accessibility.spec.ts",
    "test:api": "jest --testPathPattern=api",
    "test:performance": "k6 run k6/load-test.js",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "lighthouse": "lhci autorun",
    "security:audit": "npm audit --audit-level=moderate",
    "ci:pr": "npm run lint && npm run test:unit && npm run test:smoke",
    "ci:merge": "npm run lint && npm run test && npm run test:e2e && npm run test:a11y",
    "ci:security": "npm run security:audit && npm run lint",
    "pretest": "npm run lint"
  },
  "keywords": [
    "testing",
    "playwright",
    "e2e",
    "accessibility",
    "jest",
    "ci-cd",
    "agile"
  ],
  "author": "VA Digital Services Team",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.10",
    "@types/node": "^25.0.6",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "axe-core": "^4.8.0",
    "axe-playwright": "^1.2.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^0.17.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "prettier": "3.7.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
