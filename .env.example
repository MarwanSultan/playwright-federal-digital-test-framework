// .env.example
# API Configuration
VA_API_KEY=your-api-key-here
VA_API_URL=https://api.va.gov

# Environment
NODE_ENV=test
TEST_ENV=staging

# Base URLs
BASE_URL=https://digital.va.gov
STAGING_URL=https://staging.digital.va.gov
PRODUCTION_URL=https://digital.va.gov

# Authentication
TEST_USER_EMAIL=test@va.gov
TEST_USER_PASSWORD=your-test-password

# Timeout
TEST_TIMEOUT=30000
PLAYWRIGHT_TIMEOUT=30000

# Logging
LOG_LEVEL=info
DEBUG=false

# Performance
LIGHTHOUSE_BUDGET_JS=200
LIGHTHOUSE_BUDGET_CSS=50
LIGHTHOUSE_BUDGET_IMAGES=100

# Security Scanning
SNYK_TOKEN=your-snyk-token
GITGUARDIAN_API_KEY=your-gitguardian-key
SONAR_TOKEN=your-sonar-token

# CI/CD
CI=false
GITHUB_TOKEN=your-github-token

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
